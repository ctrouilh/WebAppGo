{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "hello-sevt-recplica",
    "labels": {
      "state": "serving"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "app": "sevt"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "sevt"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "hello-sevt",
            "image": "ctrouilh/webapp",
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}
